# Environment Configuration
NODE_ENV=development

# Application Configuration
NEXT_PUBLIC_APP_NAME="Smart Therapy"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Indonesian Hypnotherapy AI System"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# External Services
NEXT_PUBLIC_OPENAI_API_URL=https://api.openai.com/v1
OPENAI_API_KEY=your-openai-api-key-here

# Database URLs (for client-side display only)
NEXT_PUBLIC_ENABLE_DB_ADMIN=false

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# Indonesian Localization
NEXT_PUBLIC_DEFAULT_LOCALE=id-ID
NEXT_PUBLIC_DEFAULT_TIMEZONE=Asia/Jakarta

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Session Configuration
NEXT_PUBLIC_SESSION_TIMEOUT=7200000
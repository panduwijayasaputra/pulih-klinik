# Development Environment Configuration
# Copy this file to .env and update the values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_NAME=pulihklinik_dev
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long_for_development
JWT_EXPIRES_IN=24h

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Resend Email Configuration (Optional - for testing real emails)
# Get your API key from https://resend.com
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_FROM_NAME=Pulih Klinik Dev

# Development Email Configuration (Optional)
# When enabled, all emails will be redirected to this address
DEV_EMAIL_ENABLED=true
DEV_EMAIL_RECIPIENT=your-test-email@example.com
